html
    head
        title="Products by Pug project"
    body
        h2 Product Form
        form(action="/products" method="post")
            section(class="row g-3")
                div(class="col")
                    input(type="text" class="form-control" placeholder="Title" name="name")
                div(class="col")
                    input(type="number" class="form-control" placeholder="Price" name="price")
                div(class="col")
                    input(type="text" class="form-control" placeholder="Stock(yes/no)" name="inStock")
                div(class="col")
                    button(type="submit" class="btn btn-outline-dark") Add Product